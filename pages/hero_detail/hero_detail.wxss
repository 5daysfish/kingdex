/* hero_detail.wxss */
.header {
  position: relative;
  height: 510rpx;
}
.cover {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
}
.cover image {
  width: 100%;
  height: 100%;
}
.filter {
  position: absolute; 
  bottom: 0; 
  left: 0; 
  width: 100%;
  height: 350rpx;
  background: linear-gradient(to bottom, rgba(255, 255, 255, 0), rgba(255, 255, 255, 1));
  z-index: 2;
}
.prompt {
  margin-top: 8px;
  font-size: 28rpx;
  color: #8C9298;
}
.container {
  position: relative;
  margin-top: -60px;
  z-index: 3;
}
.slist {
  display: flex;
}
.sitem {
  flex: 1;
  text-align: center;
}
.sitem image {
  display: block;
  margin: 0 auto;
  width: 110rpx;
  height: 110rpx;
}
.sname {
  margin-top: 8px;
  font-size: 28rpx;
  color: #323232;
}
.sdesc {
  font-size: 26rpx;
  color: #8C9298;
}
.hero-title {
  margin: 0 auto;
}
.hero-title .role {
  font-size: 40rpx;
  color: #D2A868;
  font-weight: bold;
   text-shadow: 0 0 12px #fff; 
  line-height: 1;
  margin-bottom: 16rpx;
}
.hero-title .name {
  font-size: 72rpx;
  color: #000;
  font-weight: bolder;
  line-height: 1;
}
.attr-list {

}
.attr-item {
  padding: 4px 0;
  overflow: auto;
}
.attr-desc {
  float: left;
  width: 80px; 
  font-size: 16px;
  color: #61666B;
}
.attr-item .progress {
  position: relative;
  top: 7px;
  float: left;
  width: calc(100% - 80px);
  height: 9px;
  background-color: #CED7DF;
  border-radius: 10px;
}
.attr-item .progress .bar {
  height: 100%;
  background-color: #0089FF;
  border-radius: 10px;
  transition: 0.8s ease;
}
.skills {

}
.skill-tab {
  display: flex; 
  /* background-color: #ccc; */
}
.skill-tab-item {
  flex: 1;
}
.skill-tab-item image {
  display: block;
  margin: 0 auto;
  width: 146rpx;
  height: 146rpx;
  border-radius: 50%;
  border: 4px solid #B9C0C5; 
  box-sizing: border-box; 
}
.skill-tab .current image {
  border: 4px solid #0089FF;
}
.skill-content {
  margin-top: 16px;
}
.skill-content-item {

}
.skill-content-header {
  position: relative;
}
.skill-name {
  font-size: 32rpx;
  color: #323232;
}
.skill-value {
  font-size: 26rpx;
  color: #8C9298;
}
.skill-tag {
  position: absolute;
  top: 0;
  right: 0;
  padding: 3px 10px;
  font-size: 28rpx;
  color: #A0A8AE;
  line-height: 1;
  border: 1px solid #A0A8AE;
  border-radius: 10px;
}
.skill-desc {
  margin-top: 8px;
  font-size: 28rpx;
  color: #323232;
}
.equip-tlt, .equip-build .prompt {
  margin-left: auto;
  margin-right: auto;
  width: 94%;
}
.equip-build {
  margin-bottom: 16px;
}
.equip-tlt {
  margin-bottom: 12px;
  font-size: 36rpx;
  color: #555;
  line-height: 1;
}
.equip-slider .avatar {
  width: 110rpx;
  height: 110rpx;
}
.rune image {
  width: 94rpx;
  height: 110rpx;
}
.summoner .slist {
  display: block;
}
.summoner .sitem {
  display: inline-block;
  margin-right: 20px;
}
.summoner image {
  border-radius: 50%;
}